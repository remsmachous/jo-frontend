{
  "builds": [
    {
      "src": "react-app/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "react-app/dist" }
    }
  ],
  "installCommand": "cd react-app && npm ci",
  "buildCommand": "cd react-app && npm run build",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}